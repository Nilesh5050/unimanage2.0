                            <a href="#" onclick="showDashboardSection('progress')">
                                <i class="fas fa-chart-line"></i>
                                Progress
                            </a>
                        </li>
                        <li>
                            <a href="#" onclick="showDashboardSection('nutrition')">
                                <i class="fas fa-apple-alt"></i>
                                Nutrition
