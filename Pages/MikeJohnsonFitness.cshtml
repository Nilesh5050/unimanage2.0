<body>
    <!-- Animated Background -->
    <div class="bg-animation"></div>

    <!-- Header -->
    <header>
        <nav>
            <a href="#" class="logo">
                <i class="fas fa-dumbbell"></i>
                Mike Johnson Fitness
            </a>
            <button class="mobile-menu-toggle" id="mobile-menu-toggle">
                <i class="fas fa-bars"></i>
            </button>
            <ul class="nav-links" id="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#services">Services</a></li>
                <li><a href="#testimonials">Testimonials</a></li>
                <li><a href="#blog">Blog</a></li>
                <li><a href="#contact">Contact</a></li>
                <li class="auth-buttons">
                    <button class="btn btn-outline" onclick="showLoginModal()">Client Login</button>
                    <button class="btn btn-primary" onclick="showRegisterModal()">Get Started</button>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main id="main-content">
        <!-- Hero Section -->
        <section id="home" class="hero">
            <div class="hero-content">
                <h1>Transform Your Body<br>Elevate Your Life</h1>
                <p>Elite personal training with proven results. Your journey to peak fitness starts here.</p>
                <div class="hero-buttons">
                    <button class="btn btn-primary" onclick="showRegisterModal()">Start Your Journey</button>
                    <button class="btn btn-outline" onclick="scrollToSection('services')">Explore Services</button>
                </div>
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="about">
            <div class="container">
                <h2 class="section-title">About Mike Johnson</h2>
                <div class="about-content">
                    <div class="about-text">
                        <h3>Your Elite Fitness Architect</h3>
                        <p>
                            With over a decade of transforming lives through fitness, I've mastered the art of
                            personalized training. My approach combines cutting-edge science with real-world results,
                            crafting programs that adapt to your unique physiology and lifestyle.
                        </p>
                        <p>
                            I don't just train bodies – I build champions. Whether you're a beginner taking your first
                            steps or an athlete pushing boundaries, my methodology ensures sustainable progress that
                            lasts a lifetime.
                        </p>
                        <div class="credentials">
                            <div class="credential-badge">
                                <i class="fas fa-certificate"></i>
                                NASM Elite Trainer
                            </div>
                            <div class="credential-badge">
                                <i class="fas fa-certificate"></i>
                                Precision Nutrition Coach
                            </div>
                            <div class="credential-badge">
                                <i class="fas fa-certificate"></i>
                                Functional Movement Specialist
                            </div>
                            <div class="credential-badge">
                                <i class="fas fa-trophy"></i>
                                500+ Transformations
                            </div>
                        </div>
                    </div>
                    <div class="about-image">
                        <img src="~/images/Powerfil/gym.png" alt="Mike Johnson"
                             style="width: 100%; border-radius: 20px; box-shadow: 0 20px 40px rgba(255, 0, 110, 0.3);">
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section id="services" class="services">
            <div class="container">
                <h2 class="section-title">Premium Services</h2>
                <div class="services-grid">
                    <div class="service-card">
                        <div class="service-image"></div>
                        <div class="service-content">
                            <h3 class="service-title">1-on-1 Elite Training</h3>
                            <p class="service-description">
                                Personalized training sessions designed for maximum results.
                                Experience the difference of truly customized programming.
                            </p>
                            <ul class="service-features">
                                <li><i class="fas fa-check-circle"></i> Biomechanical Analysis</li>
                                <li><i class="fas fa-check-circle"></i> Custom Periodization</li>
                                <li><i class="fas fa-check-circle"></i> Real-time Form Correction</li>
                                <li><i class="fas fa-check-circle"></i> Performance Metrics</li>
                            </ul>
                            <button class="btn btn-primary" style="width: 100%; margin-top: 1.5rem;"
                                    onclick="showServiceDetails('1-on-1 Elite Training')">
                                Learn More
                            </button>
                        </div>
                    </div>
                    <div class="service-card">
                        <div class="service-image"
                             style="background-image: url('/images/gym3.jpg')"></div>
                        <div class="service-content">
                            <h3 class="service-title">Nutrition Architecture</h3>
                            <p class="service-description">
                                Scientific nutrition planning that fuels your goals. No
                                cookie-cutter diets – just precision nutrition for your body.
                            </p>
                            <ul class="service-features">
                                <li><i class="fas fa-check-circle"></i> Metabolic Testing</li>
                                <li><i class="fas fa-check-circle"></i> Custom Meal Plans</li>
                                <li><i class="fas fa-check-circle"></i> Supplement Protocol</li>
                                <li><i class="fas fa-check-circle"></i> Habit Coaching</li>
                            </ul>
                            <button class="btn btn-primary" style="width: 100%; margin-top: 1.5rem;"
                                    onclick="showServiceDetails('Nutrition Architecture')">
                                Learn More
                            </button>
                        </div>
                    </div>
                    <div class="service-card">
                        <div class="service-image"
                             style="background-image: url('/images/gym1.jpg')"></div>
                        <div class="service-content">
                            <h3 class="service-title">Digital Coaching</h3>
                            <p class="service-description">
                                Elite training delivered anywhere. Full access to my
                                methodology through our cutting-edge platform.
                            </p>
                            <ul class="service-features">
                                <li><i class="fas fa-check-circle"></i> AI-Powered App</li>
                                <li><i class="fas fa-check-circle"></i> Video Form Analysis</li>
                                <li><i class="fas fa-check-circle"></i> Progress Tracking</li>
                                <li><i class="fas fa-check-circle"></i> Community Support</li>
                            </ul>
                            <button class="btn btn-primary" style="width: 100%; margin-top: 1.5rem;"
                                    onclick="showServiceDetails('Digital Coaching')">
                                Learn More
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials Section -->
        <section id="testimonials" class="testimonials">
            <div class="container">
                <h2 class="section-title">Success Stories</h2>
                <div class="testimonials-grid">
                    <div class="testimonial-card">
                        <p class="testimonial-text">
                            "Mike transformed not just my body, but my entire approach to
                            fitness. His attention to detail and personalized programming helped me achieve what I
                            thought was impossible. 40lbs down and stronger than ever!"
                        </p>
                        <div class="testimonial-author">
                            <div class="author-image"
                                 style="background-image: url('/images/gym2.jpg')"></div>
                            <div class="author-info">
                                <h4>Sarah Mitchell</h4>
                                <p>Lost 40 lbs in 6 months</p>
                            </div>
                        </div>
                    </div>
                    <div class="testimonial-card">
                        <p class="testimonial-text">
                            "As a competitive athlete, I needed someone who understands
                            performance at the highest level. Mike's expertise in periodization and recovery took my
                            performance to new heights. PRs every month!"
                        </p>
                        <div class="testimonial-author">
                            <div class="author-image"
                                 style="background-image: url('/images/gym3.jpg')"></div>
                            <div class="author-info">
                                <h4>Marcus Rodriguez</h4>
                                <p>Professional Athlete</p>
                            </div>
                        </div>
                    </div>
                    <div class="testimonial-card">
                        <p class="testimonial-text">
                            "The nutrition coaching alone was life-changing. Mike taught me how
                            to fuel my body for performance and health. I have more energy, better focus, and I'm in the
                            best shape of my life at 45."
                        </p>
                        <div class="testimonial-author">
                            <div class="author-image"
                                 style="background-image: url('/images/gym2.jpg')"></div>
                            <div class="author-info">
                                <h4>Jennifer Chen</h4>
                                <p>CEO & Mother of 3</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Blog Section -->
        <section id="blog" class="blog">
            <div class="container">
                <h2 class="section-title">Fitness Intelligence</h2>
                <div class="blog-grid">
                    <div class="blog-card">
                        <div class="blog-image"></div>
                        <div class="blog-content">
                            <div class="blog-date">
                                <i class="fas fa-calendar-alt"></i> May 15, 2024
                            </div>
                            <h3 class="blog-title">The Science of Metabolic Adaptation</h3>
                            <p class="blog-excerpt">
                                Understanding how your metabolism adapts to training and nutrition
                                is key to breaking through plateaus. Discover the latest research on metabolic
                                flexibility.
                            </p>
                            <a href="#" class="read-more">Read More <i class="fas fa-arrow-right"></i></a>
                        </div>
                    </div>
                    <div class="blog-card">
                        <div class="blog-image"
                             style="background-image: url('/images/gym1.jpg')"></div>
                        <div class="blog-content">
                            <div class="blog-date">
                                <i class="fas fa-calendar-alt"></i> May 8, 2024
                            </div>
                            <h3 class="blog-title">Nutrient Timing for Peak Performance</h3>
                            <p class="blog-excerpt">
                                When you eat is just as important as what you eat. Learn the optimal
                                timing strategies for muscle growth, fat loss, and performance enhancement.
                            </p>
                            <a href="#" class="read-more">Read More <i class="fas fa-arrow-right"></i></a>
                        </div>
                    </div>
                    <div class="blog-card">
                        <div class="blog-image"
                             style="background-image: url('/images/gym3.jpg')"></div>
                        <div class="blog-content">
                            <div class="blog-date">
                                <i class="fas fa-calendar-alt"></i> May 1, 2024
                            </div>
                            <h3 class="blog-title">Building Unbreakable Consistency</h3>
                            <p class="blog-excerpt">
                                Consistency beats intensity every time. Discover the psychological
                                strategies that elite performers use to maintain motivation and build lasting habits.
                            </p>
                            <a href="#" class="read-more">Read More <i class="fas fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="contact">
            <div class="container">
                <h2 class="section-title">Start Your Transformation</h2>
                <div class="contact-content">
                    <div class="contact-info">
                        <h3>Get In Touch</h3>
                        <div class="contact-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <h4>Training Studio</h4>
                                <p>123 Elite Fitness Blvd<br>Performance District, PD 12345</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-phone"></i>
                            <div>
                                <h4>Connect</h4>
                                <p>(555) 123-4567<br>Available 6AM - 9PM</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <div>
                                <h4>Email</h4>
                                <p>mike@mikejohnsonfitness.com<br>Response within 24 hours</p>
                            </div>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-clock"></i>
                            <div>
                                <h4>Studio Hours</h4>
                                <p>Mon-Fri: 6AM-8PM<br>Sat: 8AM-2PM<br>Sun: Closed</p>
                            </div>
                        </div>
                    </div>
                    <div class="contact-form">
                        <h3>Send Message</h3>
                        <form onsubmit="handleContactForm(event)">
                            <div class="form-group">
                                <label for="name">Full Name</label>
                                <input type="text" id="name" placeholder="Enter your name" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input type="email" id="email" placeholder="your@email.com" required>
                            </div>
                            <div class="form-group">
                                <label for="subject">Subject</label>
                                <input type="text" id="subject" placeholder="How can I help you?" required>
                            </div>
                            <div class="form-group">
                                <label for="message">Message</label>
                                <textarea id="message" rows="5" placeholder="Tell me about your fitness goals..."
                                          required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary" style="width: 100%;">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

