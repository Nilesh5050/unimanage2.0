@page
@{
    ViewData["Title"] = "Web Services";
    Layout = "_Layout";
}
<section id="web-services" class="py-16 lg:py-24 bg-gray-50">
    <!-- Copy content from original HTML -->
    <div class="container mx-auto px-4 sm:px-6">
        <div class="text-center max-w-3xl mx-auto mb-12 lg:mb-16" data-aos="fade-up">
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold mb-4 lg:mb-6">
                Web Development <span class="gradient-text-secondary">Services</span>
            </h2>
            <p class="text-lg sm:text-xl text-gray-600">
                Professional websites and web applications tailored to your fitness business
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <div data-aos="fade-right">
                <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
                    <img src="~/images/webservice.jpg"
                         alt="Web Development" class="w-full h-48 sm:h-64 object-cover">
                    <div class="p-6 lg:p-8">
                        <h3 class="text-xl lg:text-2xl font-bold mb-3 lg:mb-4">Custom Website Development</h3>
                        <p class="text-gray-600 mb-4 lg:mb-6 text-sm lg:text-base">
                            We create stunning, responsive websites that capture your brand's essence and
                            convert
                            visitors into members. Our designs are optimized for performance, SEO, and user
                            experience.
                        </p>
                        <ul class="space-y-2 lg:space-y-3 mb-4 lg:mb-6 text-sm lg:text-base">
                            <li class="flex items-start">
                                <i class="fas fa-check-circle text-blue-500 mt-1 mr-2 lg:mr-3"></i>
                                <span>Responsive design for all devices</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-check-circle text-blue-500 mt-1 mr-2 lg:mr-3"></i>
                                <span>SEO optimized structure</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-check-circle text-blue-500 mt-1 mr-2 lg:mr-3"></i>
                                <span>Fast loading performance</span>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-check-circle text-blue-500 mt-1 mr-2 lg:mr-3"></i>
                                <span>Content management integration</span>
                            </li>
                        </ul>
                        <button class="btn-secondary text-white px-4 py-2 lg:px-6 lg:py-3 rounded-lg font-semibold hover:shadow-lg w-full sm:w-auto">
                            <a href="#contact"> Order Now</a>

                        </button>
                    </div>
                </div>
            </div>

            <div data-aos="fade-left">
                <div class="space-y-6 lg:space-y-8">
                    <div class="bg-white p-4 lg:p-6 rounded-2xl shadow-md hover:shadow-xl transition-shadow duration-300 cursor-pointer">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 lg:w-16 lg:h-16 flex-shrink-0 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center text-white text-xl lg:text-2xl">
                                <i class="fas fa-laptop-code"></i>
                            </div>

                            <div class="flex-1">
                                <h3 class="text-base lg:text-lg font-semibold text-gray-900 mb-1">
                                    Trendy Websites, Tailored for You
                                </h3>
                                <p class="text-gray-500 text-xs lg:text-sm leading-relaxed">
                                    We specialize in crafting cutting-edge websites that not only meet but
                                    exceed
                                    your unique requirements. By blending innovative design trends with
                                    user-centric
                                    functionality, we ensure your online presence stands out in today's
                                    competitive
                                    digital landscape.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white p-6 rounded-2xl  shadow-md hover:shadow-xl transition-shadow duration-300 cursor-pointer">
                        <div class="flex items-center space-x-4">
                            <!-- Icon Section -->
                            <div class="w-16 h-16 flex-shrink-0 rounded-lg bg-gradient-to-br from-green-400 to-teal-500 flex items-center justify-center text-white text-2xl">
                                <i class="fas fa-calendar-check"></i>
                            </div>

                            <!-- Content Section -->
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-gray-900 mb-1">
                                    Booking Systems & Integrations
                                </h3>
                                <p class="text-gray-500 text-sm leading-relaxed">
                                    Custom booking solutions for classes, personal training, and facility
                                    reservations.
                                    We also provide seamless WhatsApp and email integrations to keep your
                                    clients
                                    connected.
                                </p>
                            </div>
                        </div>
                    </div>


                    <div class="bg-white p-8 rounded-3xl shadow-lg card-hover">
                        <div class="flex items-start">
                            <div class="w-14 h-14 gradient-secondary rounded-xl flex items-center justify-center mr-5 flex-shrink-0">
                                <i class="fas fa-layer-group text-white text-xl"></i>
                            </div>
                            <div>
                                <h4 class="text-xl font-bold mb-2">Custom Templates Design</h4>
                                <p class="text-gray-600">
                                    Design and customize professional templates for
                                    websites,
                                    emails, and documents to match your brand identity.
                                </p>
                            </div>
                        </div>
                    </div>


                    <div class="bg-white p-8 rounded-3xl shadow-lg card-hover">
                        <div class="flex items-start">
                            <div class="w-14 h-14 gradient-secondary rounded-xl flex items-center justify-center mr-5 flex-shrink-0">
                                <i class="fas fa-tools text-white text-xl"></i>
                            </div>
                            <div>
                                <h4 class="text-xl font-bold mb-2">Maintenance & Support</h4>
                                <p class="text-gray-600">
                                    Ongoing website maintenance, security updates, and
                                    technical support.
                                </p>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>